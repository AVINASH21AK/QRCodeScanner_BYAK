<resources>


    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDisablePreview">true</item>
    </style>
    <!--<item name="android:statusBarColor">@color/red</item>-->  <!-- Status bar color -->

    <style name="AppThemeFullScreen" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowDisablePreview">true</item>
    </style>


    <!--  Tablayout  for NewsEvents -->
    <style name="Base.Widget.Design.TabLayout.Login" parent="android:Widget">
        <item name="tabPaddingStart">@dimen/size_10</item>
        <item name="tabPaddingEnd">@dimen/size_10</item>
        <item name="tabIndicatorColor">@color/colorPrimary</item>
        <item name="tabIndicatorHeight">@dimen/size_2</item>  <!--cannot set width, need to do by programitically-->
        <item name="tabTextAppearance">@style/TabLayoutText</item>
        <item name="tabSelectedTextColor">@color/colorPrimary</item>

    </style>

    <style name="TabLayoutText" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">@dimen/size_13</item>
        <item name="android:textColor">@color/blackTR20</item>
        <item name="textAllCaps">false</item>
    </style>


    <!-- Font Typeface -->
    <style name="fontsRegular">
        <item name="fontPath">fonts/GOTHAMHTF-REGULAR.OTF</item>
    </style>

    <style name="fontsMedium">
        <item name="fontPath">fonts/GOTHAMHTF-MEDIUM.OTF</item>
    </style>

    <style name="fontsBold">
        <item name="fontPath">fonts/GOTHAMHTF-BOLD.OTF</item>
    </style>


</resources>
